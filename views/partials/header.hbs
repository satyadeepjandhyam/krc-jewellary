      <script>
        document.addEventListener("DOMContentLoaded", function () {
          // Check if dark mode preference is stored in localStorage
          if (localStorage.getItem("darkMode") === "enabled") {
            document.body.classList.add("dark-mode");
            document.querySelector(".main-footer").classList.add("dark-mode");
            document.querySelector(".navbar").classList.add("dark-mode");
            document.querySelector(".sidebar").classList.add("dark-mode");
            document.querySelectorAll(".card").forEach(card => card.classList.add("dark-mode"));

            // Change the icon to moon for dark mode
            document.getElementById("modeIcon").classList.remove("fa-sun");
            document.getElementById("modeIcon").classList.add("fa-moon");
          }

          // Toggle dark mode on button click
          document.getElementById("toggleDarkMode").addEventListener("click", function () {
            document.body.classList.toggle("dark-mode");
            document.querySelector(".main-footer").classList.toggle("dark-mode");
            document.querySelector(".navbar").classList.toggle("dark-mode");
            document.querySelector(".sidebar").classList.toggle("dark-mode");
            document.querySelectorAll(".card").forEach(card => card.classList.toggle("dark-mode"));

            // Toggle the icon between sun and moon
            if (document.body.classList.contains("dark-mode")) {
              document.getElementById("modeIcon").classList.remove("fa-sun");
              document.getElementById("modeIcon").classList.add("fa-moon");

              // Save the dark mode state in localStorage
              localStorage.setItem("darkMode", "enabled");
            } else {
              document.getElementById("modeIcon").classList.remove("fa-moon");
              document.getElementById("modeIcon").classList.add("fa-sun");

              // Remove dark mode state from localStorage
              localStorage.removeItem("darkMode");
            }
          });
        });



      </script>